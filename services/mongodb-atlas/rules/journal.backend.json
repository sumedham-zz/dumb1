{
    "collection": "backend",
    "database": "journal",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "owner_id": "%%user.id"
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "sharedWith",
            "apply_when": {
                "sharedWith": "%%user.data.email"
            },
            "read": true,
            "insert": true,
            "delete": false,
            "additional_fields": {}
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "author": {
                "bsonType": "string"
            },
            "body": {
                "bsonType": "string"
            },
            "date": {
                "bsonType": "date"
            },
            "owner_id": {
                "bsonType": "string"
            },
            "sharedWith": {
                "bsonType": "array",
                "items": {
                    "bsonType": "string"
                }
            },
            "title": {
                "bsonType": "string"
            }
        },
        "title": "backend"
    }
}
